@model FrontEnd.Models.CreateBankPostingModel

@{
    ViewData["Title"] = "Bank Posting";
}

<h1>Create</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Category</label>
                @Html.DropDownListFor(x => Model.CategoryId,
                    new SelectList(Model.Category, "Value", "Text"),
                    htmlAttributes: new { @class = "form-control", id = "cmbCategory" })
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Bank Account</label>
                @Html.DropDownListFor(x => Model.BankAccountId,
                    new SelectList(Model.BankAccount, "Value", "Text"),
                    htmlAttributes: new { @class = "form-control", id = "cmbBankAccount" })
                <span asp-validation-for="BankAccountId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Creditor</label>
                @Html.DropDownListFor(x => Model.CreditorId,
                    new SelectList(Model.Creditor, "Value", "Text"),
                    htmlAttributes: new { @class = "form-control", id = "cmbCreditor" })
                <span asp-validation-for="CreditorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DocumentNumber" class="control-label">Document Number</label>
                <input asp-for="DocumentNumber" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="DocumentDate" class="control-label">Document Date</label>
                <input asp-for="DocumentDate" type="date" asp-format="{0:yyyy-MM-dd}" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="DueDate" class="control-label">Due Date</label>
                <input asp-for="DueDate" type="date" asp-format="{0:yyyy-MM-dd}" class="form-control" />
                <span asp-validation-for="DueDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label">Amount</label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaymentDate" class="control-label">Payment Date</label>
                <input asp-for="PaymentDate" type="date" asp-format="{0:yyyy-MM-dd}" class="form-control" />
                <span asp-validation-for="PaymentDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                @*TODO: need to be improved*@
                <label class="control-label">Type</label>
                <label class="control-label">
                    Debit
                    @Html.RadioButtonFor(model => model.Type, 1,
                        htmlAttributes: new { id = "optDebit" })
                </label>
                <label class="control-label">
                    Credit
                    @Html.RadioButtonFor(model => model.Type, 2,
                        htmlAttributes: new { id = "optCredit" })
                </label>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input id="btnCreate" type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}